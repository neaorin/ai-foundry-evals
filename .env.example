# Copy this file to .env and fill in your actual values

# Azure AI Project Configuration
AZURE_AI_FOUNDRY_PROJECT_ENDPOINT=your-project-endpoint-here

# RAG evaluation configuration

# Model used for AI-assisted evaluation (RAG scenario) - not required for text classification
EVALUATOR_AZURE_OPENAI_DEPLOYMENT=your-deployment-name-here
EVALUATOR_AZURE_OPENAI_ENDPOINT=https://<your-openai-endpoint>.openai.azure.com/

# AI Search Configuration (RAG scenario)
AZURE_SEARCH_API_ENDPOINT=https://<your-search-endpoint>.search.windows.net/

# Embeddings Configuration (RAG scenario)
AZURE_OPENAI_EMBEDDINGS_DEPLOYMENT_NAME=your-embeddings-deployment-name-here
AZURE_OPENAI_EMBEDDINGS_ENDPOINT=https://<your-embeddings-endpoint>.openai.azure.com/